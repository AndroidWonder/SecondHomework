<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefefa">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:text="@string/title"
        android:textColor="#ff000000"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="@string/app_name"
        android:textColor="#4EB287"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/checkamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        android:text="@string/check_amount"
        android:textStyle="bold"
        android:textColor="#ff000000"
        />


    <EditText
        android:id="@+id/edit_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkamount"
        android:lines="3"
        android:inputType="numberDecimal"
        android:background="@drawable/back"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/numofpeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="8dp"
        android:text="@string/people"
        android:textStyle="bold"
        android:textColor="#ff000000"
        />

    <EditText
        android:id="@+id/edit_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/numofpeople"
        android:layout_marginTop="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:lines="3"
        android:inputType="number"
        android:background="@drawable/back"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="8dp"
        android:text="@string/tip_percentage"
        android:textStyle="bold"
        android:textColor="#ff000000"
        />

    <EditText
        android:id="@+id/edit_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tip"
        android:layout_marginTop="140dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:lines="3"
        android:inputType="numberDecimal"
        android:background="@drawable/back"
        android:padding="8dp" />
    <Button
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_tip"
        android:onClick="go"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="250dp"
        android:background="@drawable/style"
        android:text="@string/GO" />
    <Button
        android:id="@+id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_tip"
        android:onClick="web"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="170dp"
        android:background="@drawable/style"
        android:text="@string/WEB"/>
    <Button
        android:id="@+id/dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_tip"
        android:onClick="dial"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/style"
        android:text="@string/DIAL"/>
    <Button
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_tip"
        android:onClick="map"
        android:layout_marginLeft="240dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/style"
        android:text="@string/MAP"/>

    <TextView
        android:id="@+id/total_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:textColor="#ff000000"
        android:text="@string/total_bill"
        />
    <TextView
        android:id="@+id/total_bill_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go"
        android:layout_toRightOf="@id/total_bill"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="180dp"
        android:background="@drawable/back"
        android:padding="8dp"/>


    <TextView
        android:id="@+id/total_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_bill"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        android:textColor="#ff000000"
        android:text="@string/total_tip"/>
    <TextView
        android:id="@+id/total_tip_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go"
        android:layout_toRightOf="@id/total_tip"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="180dp"
        android:background="@drawable/back"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/totalperperson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/total_bill"
        android:layout_below="@+id/go"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="140dp"
        android:textColor="#ff000000"
        android:text="@string/total_per_person" />
    <TextView
        android:id="@+id/per_person_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go"
        android:layout_toRightOf="@id/total_bill"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="195dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/back"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/tipperperson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go"
        android:layout_toRightOf="@+id/total_tip"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="140dp"
        android:textColor="#ff000000"
        android:text="@string/tip_per_person" />
    <TextView
        android:id="@+id/tip_person_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go"
        android:layout_toRightOf="@id/total_tip"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="194dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/back"
        android:padding="8dp"/>


</RelativeLayout>